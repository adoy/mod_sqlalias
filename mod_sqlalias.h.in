#ifndef MOD_SQLALIAS_H
#define MOD_SQLALIAS_H

#undef      MODULE_NAME
#undef      MODULE_VERSION
#undef      SQLALIAS_DEBUG
#undef      SQLALIAS_USE_PCONNECT
#undef      SQLALIAS_PERFECT_MATCH

#include <mysql/mysql.h>

typedef enum {
        DB_CONNECT_FAIL = 0,
        DB_CONNECT_OK,
        DB_ALREADY_CONNECTED
} sqlalias_dbconnect_ret;

typedef enum {
        VALID_URI = 0,
        FILTERED_URI
} sqlalias_filter_ret;

/* Configuration structure */
typedef struct {
        int enable;                     /* Enable */
        char *db_query;                 /* Query */
        apr_table_t *parms;             /* DB connection parameters */
        int connected;                  /* Are we connected to the DB */
        MYSQL *link;                    /* DB specific connection pointer */
        apr_array_header_t *filters;    /* Filters */
} sqlalias_conf_t;

typedef struct {
        char *pattern;
        ap_regex_t *regexp;
} sqlalias_filter_entry; 

#endif /* MOD_SQLALIAS_H */
